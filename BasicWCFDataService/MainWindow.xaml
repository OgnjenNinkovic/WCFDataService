<Window x:Class="BasicWCFDataService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicWCFDataService"
        mc:Ignorable="d"
        Title="Customers" Height="500" Width="525" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <ListBox Name="customersListBox" Height="400" Margin="10" BorderBrush="CadetBlue" DisplayMemberPath="CompanyName" SelectionChanged="customersListBox_SelectionChanged" />
            <TextBlock  Name="customersTextBlock" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
